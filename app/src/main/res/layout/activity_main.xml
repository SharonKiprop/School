<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B3E5FC"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCHOOL REGISTRATION!"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/register_student"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="200dp"
        android:background="#0288D1"
        android:gravity="center_horizontal"
        android:onClick="OpenRegisterStudent"
        android:padding="5dp"
        android:text="Register Student"
        android:textColor="#FFF"
        android:textSize="18sp" />
    <Button
        android:id="@+id/register_class"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:text="Register Class"
        android:textColor="#FFF"
        android:background="#0288D1"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/register_student"
        />
    <Button
        android:id="@+id/register_teacher"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:text="Register Teacher"
        android:textColor="#FFF"
        android:background="#0288D1"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/register_class"
        />


</LinearLayout>